<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding = "20dip"
        android:orientation="vertical">

        <TextView android:id = "@+id/title_consultar_solicitud"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "10dip"
            android:layout_marginBottom = "20dip"
            android:gravity = "center"
            android:textSize = "25dip"
            android:textColor = "@color/colorAccent"
            android:text="@string/consultar_solicitud"/>

        <EditText android:id = "@+id/txtIdSolicitud"
            android:layout_height = "wrap_content"
            android:layout_width = "fill_parent"
            android:hint = "@string/select_sol"
            android:inputType = "number"
            android:layout_marginTop = "25dip"
            android:numeric="integer"/>

        <Button
            android:id="@+id/botonconsultar"
            style="@style/button"
            android:text="@string/consultar"
            android:onClick="consultarSolicitud"/>

        <Button
            android:id="@+id/botonLimpiar"
            style="@style/button"
            android:text="@string/limpiar"
            android:onClick="limpiarTexto"/>

        <EditText
            android:id="@+id/editCanAsistentes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:enabled ="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/cant_asistentes"
            android:numeric="integer"/>


        <EditText
            android:id="@+id/ediFechaReserva"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/fecha_reserva"/>

        <EditText
            android:id="@+id/ediFechaSolicitud"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/fecha_sol"/>

        <EditText
            android:id="@+id/ediActividad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/actividad"/>

        <EditText
            android:id="@+id/ediMonto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/monto"/>

        <EditText
            android:id="@+id/ediEstado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:longClickable="false"
            android:hint = "@string/estado"/>

    </LinearLayout>
</ScrollView>