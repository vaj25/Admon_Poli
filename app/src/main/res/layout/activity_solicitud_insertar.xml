<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        android:padding = "20dip"
        android:orientation = "vertical">

        <TextView android:id = "@+id/title_insert_solicitud"
            android:layout_width = "fill_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "10dip"
            android:layout_marginBottom = "20dip"
            android:text = "@string/insert_solicitud"
            android:gravity = "center"
            android:textSize = "25dip"
            android:textColor = "@color/colorAccent"/>

        <EditText android:id = "@+id/txtDui"
            android:layout_height = "wrap_content"
            android:layout_width = "fill_parent"
            android:hint = "@string/dui_solicitante"
            android:inputType = "number"
            android:layout_marginTop = "25dip"/>


        <EditText android:id = "@+id/txtFechaReserva"
            android:layout_height = "wrap_content"
            android:layout_width = "fill_parent"
            android:hint = "@string/fecha_reserva"
            android:inputType = "text"
            android:layout_marginTop = "25dip"/>


        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_actividad"
            android:layout_marginTop = "25dip"
            android:id="@+id/selectActividad" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_actividad"
            android:layout_marginTop = "25dip"
            android:id="@+id/selectAdmin" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_actividad"
            android:layout_marginTop = "25dip"
            android:id="@+id/selectTarifa" />

        <Button
            style="@style/button"
            android:text="@string/enviar_solicitud"
            android:id="@+id/EnviarButton"
            android:onClick="insertarSolicitud"/>

        <Button
            style="@style/button"
            android:text="@string/limpiar"
            android:id="@+id/limpiarButton"
            android:onClick="limpiarTexto"/>

    </LinearLayout>
</ScrollView>