<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gr23.fia.ues.sv.admon_poli.AdministradorInsertarActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id Administrador"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/editTelefono"
        android:layout_alignBottom="@+id/editTelefono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editIdAdmin"
        android:layout_above="@+id/editTelefono"
        android:layout_alignRight="@+id/editTelefono"
        android:layout_alignEnd="@+id/editTelefono"
        android:layout_toRightOf="@+id/btnInsertar"
        android:layout_toEndOf="@+id/btnInsertar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTelefono"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toRightOf="@+id/btnInsertar"
        android:layout_toEndOf="@+id/btnInsertar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:id="@+id/btnInsertar"
        android:onClick="insertarAdministrador"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:id="@+id/btnLimpiar"
        android:onClick="limpiarTexto"
        android:layout_alignTop="@+id/btnInsertar"
        android:layout_toRightOf="@+id/btnInsertar"
        android:layout_toEndOf="@+id/btnInsertar"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dip"
        android:textColor="@color/colorAccent"
        android:text="Nuevo Administrador"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/textView7"
        android:layout_below="@+id/editTelefono"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editEmail"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/editTelefono"
        android:layout_alignEnd="@+id/editTelefono"
        android:layout_alignLeft="@+id/editTelefono"
        android:layout_alignStart="@+id/editTelefono" />
</RelativeLayout>
