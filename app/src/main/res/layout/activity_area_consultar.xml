<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:padding = "20dip"
    android:orientation = "vertical">

    <TextView android:id = "@+id/title_consult_area"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dip"
        android:layout_marginBottom = "20dip"
        android:text = "@string/consult_area"
        android:gravity = "center"
        android:textSize = "25dip"
        android:textColor = "@color/colorAccent"/>

    <EditText android:id = "@+id/txtNombreArea"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/nombre_area"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:text="@string/consultar_area"
        android:layout_marginTop = "25dip"
        android:id="@+id/EnviarButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:text="@string/limpiar_area"
        android:layout_marginTop = "25dip"
        android:id="@+id/LimpiarButton"/>

    <EditText android:id = "@+id/IdArea"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/id_area"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>

    <EditText android:id = "@+id/txtCapacidadArea"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/capacidad_area"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>

    <EditText android:id = "@+id/txtArea"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/area"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>





</LinearLayout>
