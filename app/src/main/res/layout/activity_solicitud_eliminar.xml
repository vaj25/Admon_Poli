<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding = "20dip"
    android:orientation="vertical">

    <TextView android:id = "@+id/title_consultar_solicitud"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dip"
        android:layout_marginBottom = "20dip"
        android:gravity = "center"
        android:textSize = "25dip"
        android:textColor = "@color/colorAccent"
        android:text="@string/eliminar_solicitud"/>

    <EditText android:id = "@+id/txtIdSolicitud"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/select_sol"
        android:inputType = "number"
        android:layout_marginTop = "25dip"
        android:numeric="integer"/>

    <Button
        android:id="@+id/botonConsultar"
        style="@style/button"
        android:text="@string/eliminar"
        android:onClick="eliminarSolicitud"/>

</LinearLayout>
    </ScrollView>