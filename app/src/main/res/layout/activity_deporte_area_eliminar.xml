<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding = "20dip"
    android:orientation="vertical">

    <TextView android:id = "@+id/title_eliminar_deporte"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dip"
        android:layout_marginBottom = "20dip"
        android:gravity = "center"
        android:textSize = "25dip"
        android:textColor = "@color/colorAccent"
        android:text="@string/eliminar_deporte_area"/>

    <EditText android:id = "@+id/id_deporte_area"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/id_area1"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>

    <EditText android:id = "@+id/id_deporte"
        android:layout_height = "wrap_content"
        android:layout_width = "fill_parent"
        android:hint = "@string/id_deporte1"
        android:inputType = "text"
        android:layout_marginTop = "25dip"/>


    <Button
        android:id="@+id/botonConsultar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:text="@string/eliminar"
        android:onClick=""/>

</LinearLayout>